{% extends 'base.html.twig' %}

{% block title %}Page de Paiement{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('assets/css/paiement.css') }}">
{% endblock %}

{% block content %}
    <div class="payment-container">
        <h1 class="payment-header">Paiement</h1>
        <form action="{{ path('payment_process') }}" method="post" class="payment-form">
            <label for="cardNumber">Num√©ro de carte :</label>
            <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 5678 9876 5432" required>

            <label for="expirationDate">Date d'expiration :</label>
            <input type="text" id="expirationDate" name="expirationDate" placeholder="MM/AA" required>

            <label for="cvv">Code CVV :</label>
            <input type="text" id="cvv" name="cvv" placeholder="123" required>

            <button type="submit" class="payment-form-submit">Confirmer</button>
        </form>
    </div>
{% endblock %}
