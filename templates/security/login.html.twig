{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block content %}
<div class="container">
    <div class="login-form">
        <h1>Connexion</h1>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {{ form_start(loginForm, {'attr': {'class': 'login-form'}}) }}
            <div class="form-group">
                {{ form_label(loginForm._username) }}
                {{ form_widget(loginForm._username) }}
                {{ form_errors(loginForm._username) }}
            </div>

            <div class="form-group">
                {{ form_label(loginForm._password) }}
                {{ form_widget(loginForm._password) }}
                {{ form_errors(loginForm._password) }}
            </div>

            <button type="submit" class="btn btn-primary">Se connecter</button>
        {{ form_end(loginForm) }}

        <p class="mt-3">
            Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a>
        </p>
    </div>
</div>
{% endblock %}
