{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1>Mon Compte</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="profile-picture-container">
            <img src="{{ asset('uploads/profile_pictures/' ~ user.pictureProfile) }}" class="profile-picture" alt="Photo de profil">
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.username }}</h5>
                        <p class="card-text">
                            <strong>Email:</strong> {{ user.email }}<br>
                            <strong>Téléphone:</strong> {{ user.phoneNumber ? user.phoneNumber : 'Non renseigné' }}<br>
                            <strong>Adresse de livraison:</strong> {{ user.deliveryAddress ? user.deliveryAddress : 'Non renseignée' }}
                        </p>
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Modifier mes informations</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .profile-picture-container {
            width: 150px;
            height: 150px;
            margin: 20px 0;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid #007bff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .profile-picture {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
{% endblock %} 